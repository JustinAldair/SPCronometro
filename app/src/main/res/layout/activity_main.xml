<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

       <TextView
           android:id="@+id/tvTiempo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="00:00:00"
           android:textSize="40dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnPausa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#61D111"
            android:onClick="reanudar"
            android:text="Pausar"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:onClick="Bandera"
            android:text="Bandera"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnReiniciarCro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ReiniciarCro"
            android:text="Reiniciar"
            android:textSize="12sp" />


        <Button
            android:id="@+id/btnReiniciarLis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#807A7A"
            android:onClick="ReiniciarLis"
            android:text="Vaciar"
            android:textSize="12sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/LvTiempo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>